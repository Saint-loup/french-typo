{
  "name": "French Typography",
  "description": "Provides french typographical conventions and non-breaking spaces",
  "author": "Baptiste Roullin",
  "authorEmail": "baptiste@roullin.net",
  "homepage": "https://github.com/Saint-loup/french-typography/",
  "icon": "icon.png",
