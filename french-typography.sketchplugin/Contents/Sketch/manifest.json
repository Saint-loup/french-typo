          "TextChanged.finish": "fixLayer"
        }
      }
    },
    {
      "name": "Intialiser plugin",
      "identifier": "initPlugin",
      "script": "command.js",
      "handlers": {
        "actions": {
          "Startup": "initPlugin"
        }
      }
    },
    {
      "name": "Tester les regex",
      "identifier": "testRegex",
      "script": "test.js",
      "handler": "testRegex"
    },
    {
      "name": "Utiliser des espaces fines ins√©cables",
      "identifier": "use_NNBSP",
      "script": "command.js",
      "handler": "use_NNBSP"
    },
    {
      "name": "French typography settings",
      "identifier": "openSettings",
      "script": "command.js",
      "handler": "openSettings"
    }
  ],
  "menu": {
    "title": "French typography settings",
    "items": [
      "openSettings"
    ],
    "isRoot": true
  },
  "version": "1.0.0",
  "disableCocoaScriptPreprocessor": true,
